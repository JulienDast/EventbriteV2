<br>
<div class="card text-center">
  <h1> Voici l'évènement n° <%= @event.id %> </h1>
  <div class="card-body">
    <h5 class="card-title"> <%= @event.title%></h5>
    <p class="card-text"><%= @event.description%></p>
    <p class="card-text"><%= @event.location%></p>
    <p class="card-text"><%= @event.admin.email%></p>
    <p class="card-text"><%=%></p>
    <%= button_to "S'inscrire à l'évènement : #{@event.price} €", checkout_create_path(price: @event.price), class: "btn btn-primary", remote: true %>
  </div>
</div>
